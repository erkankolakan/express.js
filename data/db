//bu sayfa sayesinde her sayfada veri tabanımızı kolayca çağırabilir ve bilgileri çekebiliriz.
const config = require("../config")
const { Sequelize } = require('sequelize');


// Option 3: Passing parameters separately (other dialects)
const sequelize = new Sequelize(config.db.database , config.db.user , config.db.password, {
        dialect:"mysql",
        host: config.db.host,
        define:{
            timestamps: false // createAt ve updateAt değerlerini tablolardan kaldırır. Ama bazı tablolarda timestamps değerilerinin gözükmesini istiyor olabiliriz o yüzden gidip o tablolara gidip timestamps:true şeklide yaralayabiliriz
        }
    });

    const baglantitesti = async() => {
        try {
            await sequelize.authenticate()
            console.log("mysql bağlantısı yapılıdı")
            
        } catch (err ) {
            console.log(err);
        }
    }

    baglantitesti()

    module.exports = sequelize;


