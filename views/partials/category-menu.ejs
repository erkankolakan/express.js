<div class="list-group">
    <a href="/blogs" class="list-group-item list-group-item-action">Tüm Katagoriler</a>
    <% categories.forEach(element => { %>
        <a href="/blogs/category/<%= element.category_id %>"
            class="list-group-item list-group-item-action
            <%= secilenCategory == element.category_id ? "active" : " "  %>
            ">
        <%= element.name %>
    </a>
    <% }) %>
</div>

<!-- buraya göndermiş olduğumuz url den gelen id , element.category_id  de normal herhangi bir kategornin id si tıkladığımızın id si ve url den gelen id aynı ise active özelliğini ekliyoruz -->

