<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <title><%=title%> - BlogApp</title> 
</head>
<body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <div class="container"> 
            <a href="/" class="navbar-brand">Blogapp</a>
            <ul class="navbar-nav me-auto">
                <li class="nav-item"> 
                    <a href="/blogs" class="nav-link">Blog listesi</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-3 ">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">

    <% categories.forEach(element => { %>
        <a href="" class="list-group-item list-group-item-action"><%= element %></a>
    <% }) %>
            </div>
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%=title%> 
                </h1>
                
<% blogs.forEach(element => { %>
    <% if (element.anasayfa) { %>
        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4">
                    <img src="/static/images/<%= element.resim%>" class="img-fluid" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                           <%= element.baslik %>
                        </h5>
                        <p class="card-text">
                            <%= element.aciklama %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

 
<% }) %>




            </div>
        </div>
    </div>

</body>
</html>