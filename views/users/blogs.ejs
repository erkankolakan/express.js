<!DOCTYPE html>
<html lang="en">
<head>
    <!-- tüm html sayfasında head kısmı aynı olduğu için onuda partials içine koyduk ve html sayfalarına çağırdık -->
 <%- include('../partials/head') %>
</head>
<body>

<!-- oluşturmuş olduğumuz parçayı buraya da çağırıyoruz ! ejs de bir html öğesiini çağırken - kullanılır -->
    <%- include('../partials/nav') %> 


    <div class="container mt-3 ">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">

    <% categories.forEach(element => { %>
        <a href="" class="list-group-item list-group-item-action"><%= element %></a>
    <% }) %>
                </div>
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%=title%> 
                </h1>

<% blogs.forEach(element => { %>
    <div class="card mb-4">
        <div class="row">
            <div class="col-md-4">
                <img src="/static/images/<%=element.resim%>" class="img-fluid" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                       <%= element.baslik %>
                    </h5>
                    <p class="card-text">
                        <%= element.aciklama %>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <% }) %>    

    <% if (blogs.length >= 3) { %>  
        <%- include('../partials/pagination') %>
    <%}%>


            </div>
        </div>
    </div>

</body>
</html>


