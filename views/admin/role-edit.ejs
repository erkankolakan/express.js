<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %> 
    <div class="container mt-3 ">
        <div class="row">
            <div class="col-md-12 mt-3">
                <form method="post">
                    <input type="hidden" name="roleid" value="<%= role.id %>">
                        <div class="row mb-3">
                            <label for="rolename" class="col-sm-2 col-form-label">Kategori ismi</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="rolename" name="rolename" value="<%= role.rolename %>"> 
                            </div>
                        </div>
    
                            <div class="row mb-3">
                                <div class="col-sm-8 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                    </form>
            </div>
            <table class="table table-bordered table-striped mt-3" >
                <thead>
                    <tr>
                        <th style="width:50px;">id</th>
                        <th style="width:150px;">username</th>
                        <th>email</th>
                        <th style="width:230px;">id</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td># <%= user.id %></td>
                            <td>
                                <%= user.fullname %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/users/<%= user.id %>">düzenle</a>

                                <form style="display: inline-block;" action="/admin/roles/remove" method="post">
                                    <input type="hidden" name="roleid" value="<%= role.id %>">
                                    <input type="hidden" name="userid" value="<%= user.id %>">
                                    <button class="btn btn-sm btn-danger" type="submit">Kategoriden çıkar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>


