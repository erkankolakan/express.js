<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('../partials/head') %>
</head>
<body>
    
    <%- include('../partials/nav') %> 

    <div class="container mt-3 ">
        <div class="row">
            <div class="col-md-12 mt-3">
            
                <form method="post">
                    <input type="hidden" name="categoryid" value="<%= category.id %>">

                        <div class="row mb-3">
                            <label for="name" class="col-sm-2 col-form-label">Kategori ismi</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>"> 
                            </div>
                        </div>
    
                            <div class="row mb-3">
                                <div class="col-sm-8 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
    
                    </form>

            </div>
            
            <p>Bu kategoriye ait <%= countBlog %> blog var</p>     

            <table class="table table-bordered table-striped" >
                <thead>
                    <tr>
                        <th style="width:50px;">id</th>
                        <th style="width:150px;">resim</th>
                        <th>baslik</th>
                        <th style="width:230px;">id</th>
                    </tr>
                </thead>
                <tbody>
                    <% blogs.forEach(element => { %>
                        <tr>
                            <td># <%= element.dataValues.id %></td>
                            <td>
                                <img src="/static/images/<%= element.dataValues.resim %>" class="img-fluid"  width="400" height="200"  alt="">
                                <!-- static/images sabit gelecek resim bilgiside datadan gelecek -->
                            </td>
                            <td>
                                <%= element.dataValues.baslik %>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/blog/<%= element.dataValues.id %>">düzenle</a>

                                <form style="display: inline-block;" action="/admin/categories/remove" method="post">
                                    <input type="hidden" name="blogid" value="<%= element.id %>">
                                    <input type="hidden" name="categoryid" value="<%= category.id %>">
                                    <button class="btn btn-sm btn-danger" type="submit">Kategoriden çıkar</button>
                                </form>


                            </td>
                        </tr>
                    <% }) %>

                </tbody>
            </table>

            
        </div>
    </div>

</body>
</html>


