<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('../partials/head') %>
</head>
<body>
    
    <%- include('../partials/nav') %> 

    <div class="container mt-3 ">
        <div class="row">
            <div class="col-md-12 mt-3">
            
                <form action="">
                    <div class="row mb-3">
                        <label for="baslik" class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="baslik" name="baslik">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="aciklama" class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" name="aciklama" rows="10"></textarea>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="resim" class="col-sm-2 col-form-label">Resim</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="resim" name="anasayfa">
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label for="kategori" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-8">
                            <select name="kategori" id="kategori" class="form-select">
                                <option value="-1">Kategori Seçiniz</option>
                    <!-- gelen değer -1 değilse admin mutlaka bir kategori seçmiştir -->
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.category_id %>"><%= category.name %></option>
                                <% }) %>

                            </select>
                        </div>
                    </div>

                    
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="anasayfa" name="anasayfa">
                                <label class="form-check-label" for="anasayfa">
                                    Anasayfa
                                </label>
                              </div>
                            </div>
                          </div>

                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="onay" name="onay">
                                <label class="form-check-label" for="onay">
                                    Onay
                                </label>
                              </div>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>

                    <!-- serverden bu bilgilere onlara vermiş olduğumuz name bilgisi sayesinde ulaşıyoruz -->
                </form>

            </div>
        </div>
    </div>

</body>
</html>


